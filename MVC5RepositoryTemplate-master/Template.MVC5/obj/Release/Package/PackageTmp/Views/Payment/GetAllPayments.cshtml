@model IEnumerable<Template.Model.ViewModels.PaymentView>

@{
    ViewBag.Title = "GetAllPayments";
}

<h2>Payments History</h2>
@using (Html.BeginForm("SearchPayment", "Payment"))
{<hr />
    <h6>Search By ID No:</h6>
    <p>
        @Html.TextBox("searchid")
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </p>
    <hr />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolicyHolderIdNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyHolderIdNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentFor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td></td>
        </tr>
    }

</table>
