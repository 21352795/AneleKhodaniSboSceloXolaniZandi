@model IEnumerable<Template.Model.ViewModels.RentalPaymentView>

@{
    ViewBag.Title = "GetAllRentalPayments";
}

<h2>Hired Payments</h2>
@using (Html.BeginForm("GetAllRentalPayments", "RentalPayment"))
{
    <p>
        @Html.TextBox("searchid")
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PolicyHolderIdNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PaymentFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.AmountPaid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyHolderIdNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.PaymentFor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
        </tr>
    }

</table>
