@model IEnumerable<Template.Model.ViewModels.PremiumPaymentView>

@{
    ViewBag.Title = "SearchPayment";
}

<h2>Searched Premium Payment Results</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolicyHolderIdNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyHolderIdNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentFor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>

        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to List", "GetAllPremiumPayments")
</div>