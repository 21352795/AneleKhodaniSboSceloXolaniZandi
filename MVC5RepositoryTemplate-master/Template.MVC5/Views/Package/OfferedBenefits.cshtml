@model IEnumerable<Template.Model.ViewModels.BenefitView>

@{
    ViewBag.Title = "OfferedBenefits";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}

<h2>Offered Benefits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.benefitID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.benefitID })
        </td>
    </tr>
}

</table>
