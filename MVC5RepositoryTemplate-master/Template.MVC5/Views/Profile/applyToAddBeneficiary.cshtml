@model Template.Model.ViewModels.BeneficiaryViewModel
@{
    ViewBag.Title = "Apply To Add Beneficiary";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
}
@using (Html.BeginForm("applyToAddBeneficiary", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="shopper-informations">
        <div class="row">
            <div class="col-md-6">
                <div class="shopper-info">
                    <p>Application for Adding Beneficiary</p>
                    <p>Step 1 of 2</p>
                    <table>
                        <tr>
                            <td width="120px">
                                @Html.Label("ID Number")
                            </td>
                            <td>
                               @Html.TextBoxFor(m => m.benIDNumber, new { @class = "form-control", @style = "width:200px", @placeholder = "ID Number" })
                            <div class="validation">
                                @Html.ValidationMessageFor(m => m.benIDNumber, "", new { @class = "text-danger" })
                            </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("First Name")
                            </td>
                            <td>
                               @Html.TextBoxFor(m => m.firstName, new { @class = "form-control", @style = "width:200px", @placeholder = "First Name" })
                            <div class="validation">
                                @Html.ValidationMessageFor(m => m.firstName, "", new { @class = "text-danger" })
                            </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Last Name")
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", @style = "width:200px", @placeholder = "Last Name" })
                                <div class="validation">
                                    @Html.ValidationMessageFor(m => m.lastName, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Select Relationship")
                            </td>
                            <td>
                                @Html.DropDownListFor(m => m.relationship, new SelectList(new[] { "Spouse", "Parent", "Child", "Sibling", "Uncle", "Aunt", "Cousin", "Nephew", "Niece", "Parent-in-law", "Sibling-in-law", "Grandparent", "Grandchild" }
     ), "Relationship", new { @class = "form-control", @style = "width:200px" })
                                <div class="validation">
                                    @Html.ValidationMessageFor(m => m.relationship, "", new { @class = "text-danger" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Reason")
                            </td>
                            <td>
                                @Html.TextArea("reason", new { @class = "form-control", @style = "width:200px",@required= "required", @placeholder = "Tell us More" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                
                            </td>
                            <td class="pull-right">
                                <input type="submit" class="btn btn-default add-to-cart" value="Next" />
                                <div class="validation">
                                    <div class="alert-danger">@TempData["Error"]</div>
                                </div>
                            </td>                            
                        </tr>
                    </table>
                </div>
            </div>            
        </div>
    </div>

}


